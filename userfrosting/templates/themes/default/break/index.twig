{% extends "layouts/layout-break.twig" %}

{% block page %}
    {# By putting this in a special block, we ensure that it will be set AFTER the default values are set in the parent template,
    but BEFORE the page itself is rendered. #}
    {% set page = page | merge({
    "title"       : "商品柜浏览 | 控制中心",
    "description" : "Your user dashboard."
    }) %}
    {{ parent() }}
{% endblock %}

{% block page_css %}
    <link rel="stylesheet" href="{{ site.uri.public }}/vendor/fontawesome/css/font-awesome.css"
          xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html"/>
    <link rel="stylesheet" href="{{ site.uri.public }}/vendor/metisMenu/dist/metisMenu.css"/>
    <link rel="stylesheet" href="{{ site.uri.public }}/vendor/animate.css/animate.css"/>
    <link rel="stylesheet" href="{{ site.uri.public }}/vendor/bootstrap/dist/css/bootstrap.css"/>

    <!-- App styles -->
    <link rel="stylesheet" href="{{ site.uri.public }}/fonts/pe-icon-7-stroke/css/pe-icon-7-stroke.css"/>
    <link rel="stylesheet" href="{{ site.uri.public }}/fonts/pe-icon-7-stroke/css/helper.css"/>
    <link rel="stylesheet" href="{{ site.uri.public }}/styles/style.css">
{% endblock %}

{% block content %}
    <div class="normalheader transition animated fadeIn">
        <div class="hpanel">
            <div class="panel-body">
                <a class="small-header-action" href="">
                    <div class="clip-header">
                        <i class="fa fa-arrow-up"></i>
                    </div>
                </a>
                <h2 class="font-light m-b-xs">设备列表</h2>
                <small>点击表里的列即可进行信息设置！</small>
            </div>
        </div>
    </div>
    <div class="content animate-panel">
        <div class="row">
            <div class="col-md-12">
                <div class="hpanel" id="Tour-1">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            <a class="showhide"><i class="fa fa-chevron-up"></i></a> <a
                                    class="closebox"><i class="fa fa-times"></i></a>
                        </div>
                        <i class="fa fa-table fa-fw"></i> 设备列表
                    </div>
                    <div class="panel-body">
                        <div>
                            <table class="table table-bordered table-striped table-hover"
                                   width="100%" id="jsonGrid"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block page_scripts %}
    <script src="{{ site.uri.public }}/vendor/jquery/dist/jquery.min.js"></script>
    <script src="{{ site.uri.public }}/vendor/slimScroll/jquery.slimscroll.min.js"></script>
    <script src="{{ site.uri.public }}/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="{{ site.uri.public }}/vendor/metisMenu/dist/metisMenu.min.js"></script>
    <script src="{{ site.uri.public }}/vendor/iCheck/icheck.min.js"></script>
    <script src="{{ site.uri.public }}/vendor/peity/jquery.peity.min.js"></script>
    <script src="{{ site.uri.public }}/vendor/sparkline/index.js"></script>
    <script src="{{ site.uri.public }}/vendor/moment/min/moment-with-locales.min.js"></script>
    <script src="{{ site.uri.public }}/vendor/bootstrap-datetime/bootstrap-datetimepicker.js"></script>
    <script src="{{ site.uri.public }}/vendor/datatables/media/js/jquery.dataTables.js"></script>
    <script src="{{ site.uri.public }}/vendor/datatables_plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>
    <script src="{{ site.uri.public }}/vendor/bootstrap-tour/build/js/bootstrap-tour.min.js"></script>
    <script src="{{ site.uri.public }}/myjs/index.js"></script>
    <script type="text/javascript">

    </script>
    <script src="{{ site.uri.public }}/scripts/homer.js"></script>
{% endblock %}